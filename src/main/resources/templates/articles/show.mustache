{{>layouts/header}}
<!-- 단일 데이터의 상세페이지 -->
<table class="table">
    <thead>
    <tr>
        <th scope="col">Id</th>
        <th scope="col">Title</th>
        <th scope="col">Content</th>
    </tr>
    </thead>

    {{#article}} <!-- 컨트롤러에서 선언한 변수의 사용범위를 설정 -->
    <tr>
        <th>{{id}}</th>
        <td>{{title}}</td>
        <td>{{content}}</td>
    </tr>
    {{/article}}

    </tbody>
</table>
<a href="/articles/{{article.id}}/delete" class="btn btn-danger">삭제하기</a>
<a href="/articles/{{article.id}}/edit" class="btn btn-primary">수정하기</a>
<a href="/articles">목록 페이지</a>

{{>comments/_comments}} <!-- 상세 페이지에 댓글 뷰 파일 삽입 -->
{{>layouts/footer}}